{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["node", "react", "react-dom"],
    "jsx": "react" // Add this line if using React
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/@types/**/*.d.ts" // Include custom types if applicable
  ],
  "exclude": ["node_modules"]
}
